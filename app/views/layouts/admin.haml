= content_for :content do
  #admin_page.grid_24
    %h1= t(".admin")
    .grid_6.alpha
      #left_link_panel_admin
        = link_to t(".news_items"), admin_news_items_path(:type => "news"), :class => ((params[:type] && params[:type].eql?("news")) ? "selected" : "unselected")
        - if @current_user.is_admin?
          = link_to "Listed Communities", admin_communities_path(:type => "communities" ), :class => ((params[:type] && params[:type].eql?("communities")) ? "selected" : "unselected")
          = link_to "Listed Users", admin_profiles_path(:type => "profiles" ), :class => ((params[:type] && params[:type].eql?("profiles")) ? "selected" : "unselected")
          = link_to "Food Listings", admin_listings_path(:type => "listings" ), :class => ((params[:type] && params[:type].eql?("listings")) ? "selected" : "unselected")

        - if @current_community.polls_enabled?
          = link_to t(".polls"), admin_polls_path(:type => "polls"), :class => ((params[:type] && params[:type].eql?("polls")) ? "selected" : "unselected")
    .grid_18.omega
      = yield

= render :file => 'layouts/application'
