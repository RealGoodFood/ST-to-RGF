= radio_button_tag("valid_until_select", "for_now", !@listing.temporary?, :id => "for_now_radio_button")
= label_tag("for_now_radio_button", t('.for_the_time_being'), :class => "radiobutton")
.date_select_container
  = radio_button_tag("valid_until_select", "date", @listing.temporary?)
  = date_select(:listing, :valid_from, {:start_year => Time.now.year, :end_year => Time.now.year + 1, :default => 0.months.from_now}, :class => "listing_date_select", :disabled => !@listing.temporary?)
  = date_select(:listing, :valid_until, {:start_year => Time.now.year, :end_year => Time.now.year + 1, :default => 1.months.from_now}, :class => "listing_date_select", :disabled => !@listing.temporary?)
