- if session[:swap_food].nil? && session[:swap_usr].nil?
  = form.hidden_field :visibility, :value => "everybody"
- else
  .new_listing_form_field_container
    = form.label :visibility, t(".visibility") + "*:", :class => "input"
    = select("listing", "visibility", visibility_array, {:selected => (@listing.visibility || "everybody")}, { :class => "visibility_select" })
= form.hidden_field :current_community_id, :value => @current_community.id
